<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= PublicTemplate.human_attribute_name(:title) %></th>
      <th><%= PublicTemplate.human_attribute_name(:tid) %></th>
      <th><%= PublicTemplate.human_attribute_name(:kid_list) %></th>
      <th><%= PublicTemplate.human_attribute_name(:description) %></th>
      <th>
        <%= link_to new_admin_public_template_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @public_templates.each do |public_template| %>
    <tr>
      <td><%= public_template.title %></td>
      <td><%= public_template.tid %></td>
      <td><%= public_template.kid_list %></td>
      <td><%= public_template.description %></td>
      <td>
        <%= link_to admin_public_template_path(public_template), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_public_template_path(public_template), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_public_template_path(public_template), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @public_templates %>
