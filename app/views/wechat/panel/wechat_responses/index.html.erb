<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= WechatResponse.human_attribute_name(:id) %></th>
      <th><%= WechatResponse.human_attribute_name(:type) %></th>
      <th><%= WechatResponse.human_attribute_name(:match_value) %></th>
      <th><%= WechatResponse.human_attribute_name(:response) %></th>
      <th>
        <%= link_to new_panel_wechat_config_wechat_response_path(@wechat_config), remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><% t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_responses.each do |wechat_response| %>
    <tr>
      <td><%= wechat_response.id %></td>
      <td><%= wechat_response.type_i18n %></td>
      <td>
        <%= wechat_response.match_value %>
        <% if wechat_response.is_a?(ScanResponse) %>
          <%= image_tag wechat_response.qrcode_file, class: 'ui small image' %>
        <% end %>
      </td>
      <td><%= wechat_response.response %></td>
      <td>
        <%= link_to panel_wechat_config_wechat_response_path(@wechat_config, wechat_response), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_panel_wechat_config_wechat_response_path(@wechat_config, wechat_response), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to panel_wechat_config_wechat_response_path(@wechat_config, wechat_response), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_responses %>
