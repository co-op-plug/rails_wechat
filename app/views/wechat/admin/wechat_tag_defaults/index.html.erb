<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= WechatTagDefault.human_attribute_name(:name) %></th>
      <th><%= WechatTagDefault.human_attribute_name(:default_type) %></th>
      <th>
        <%= link_to new_admin_wechat_tag_default_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_tag_defaults.each do |wechat_tag_default| %>
    <tr>
      <td><%= wechat_tag_default.name %></td>
      <td><%= wechat_tag_default.default_type_i18n %></td>
      <td>
        <%= link_to admin_wechat_tag_default_path(wechat_tag_default), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_wechat_tag_default_path(wechat_tag_default), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_wechat_tag_default_path(wechat_tag_default), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_tag_defaults %>
