<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= WechatTemplate.human_attribute_name(:template_id) %></th>
      <th><%= WechatTemplate.human_attribute_name(:title) %></th>
      <th><%= WechatTemplate.human_attribute_name(:content) %></th>
      <th><%= WechatTemplate.human_attribute_name(:example) %></th>
      <th><%= WechatTemplate.human_attribute_name(:template_type) %></th>
      <th>
        <%= link_to new_admin_wechat_template_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_templates.each do |wechat_template| %>
    <tr>
      <td><%= wechat_template.template_id %></td>
      <td><%= wechat_template.title %></td>
      <td><%= wechat_template.content %></td>
      <td><%= wechat_template.example %></td>
      <td><%= wechat_template.template_type %></td>
      <td>
        <%= link_to admin_wechat_template_path(wechat_template), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_wechat_template_path(wechat_template), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_wechat_template_path(wechat_template), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_templates %>
