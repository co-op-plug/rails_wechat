<%= render 'wechat_nav_user' %>

<div class="ui attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= WechatTag.human_attribute_name(:name) %></th>
      <th><%= WechatTag.human_attribute_name(:tag_id) %></th>
      <th><%= WechatTag.human_attribute_name(:count) %></th>
      <th><%= WechatTag.human_attribute_name(:wechat_user_tags_count) %></th>
      <th>
        <%= link_to new_admin_wechat_app_wechat_tag_path(@wechat_app), remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
        <%= link_to sync_admin_wechat_app_wechat_tags_path(@wechat_app), method: :post, remote: true, class: 'ui mini blue button' do %>
          <i class="fas fa-sync-alt"></i><%= t('.sync') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_tag_defaults.each do |wechat_tag_default| %>
    <% wechat_tag = @default_wechat_tags.find { |i| i.tagging_id == wechat_tag_default.id } %>
    <tr>
      <td>
        <%= wechat_tag_default.name %>
        <% if wechat_tag %>
          <span class="ui grey text">(<%= wechat_tag.name %>)</span>
        <% end %>
      </td>
      <td><%= wechat_tag.tag_id if wechat_tag %></td>
      <td><%= wechat_tag.count if wechat_tag %></td>
      <td><%= wechat_tag.wechat_user_tags_count if wechat_tag %></td>
      <td>
        <div class="ui toggle checkbox">
          <% if @default_wechat_tags.pluck(:tagging_id).include?(wechat_tag_default.id) %>
            <%= check_box_tag '[wechat_tag]tagging_id', wechat_tag_default.id, true, data: { method: :delete, remote: true, url: admin_wechat_app_wechat_tags_path(@wechat_app), submit: true }, id: nil %>
          <% else %>
            <%= check_box_tag '[wechat_tag]tagging_id', wechat_tag_default.id, false, data: { method: :post, remote: true, url: admin_wechat_app_wechat_tags_path(@wechat_app), submit: true }, id: nil %>
          <% end %>
        </div>
      </td>
      <td></td>
    </tr>
  <% end %>
  <% @wechat_tags.each do |wechat_tag| %>
    <tr>
      <td><%= wechat_tag.name %></td>
      <td><%= wechat_tag.tag_id %></td>
      <td><%= wechat_tag.count %></td>
      <td><%= wechat_tag.wechat_user_tags_count %></td>
      <td>
        <%= link_to admin_wechat_app_wechat_tag_path(@wechat_app, wechat_tag), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_wechat_app_wechat_tag_path(@wechat_app, wechat_tag), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_wechat_app_wechat_tag_path(@wechat_app, wechat_tag), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_tags %>
