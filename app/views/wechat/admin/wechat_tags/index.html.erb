<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= WechatTag.human_attribute_name(:name) %></th>
      <th><%= WechatTag.human_attribute_name(:code) %></th>
      <th><%= WechatTag.human_attribute_name(:tag_id) %></th>
      <th><%= WechatTag.human_attribute_name(:tag_count) %></th>
      <th>
        <%= link_to new_admin_wechat_tag_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_tags.each do |wechat_tag| %>
    <tr>
      <td><%= wechat_tag.name %></td>
      <td><%= wechat_tag.code %></td>
      <td><%= wechat_tag.tag_id %></td>
      <td><%# wechat_tag.tag_count %></td>
      <td>
        <%= link_to admin_wechat_tag_path(wechat_tag), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_wechat_tag_path(wechat_tag), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_wechat_tag_path(wechat_tag), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_tags %>
