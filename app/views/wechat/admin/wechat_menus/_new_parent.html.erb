<div class="ui modal" id="modal">
  <i class="close icon"></i>
  <div class="ui header blue">
    <%= t('.new') %>
  </div>

  <div class="content">
    <%= form_with model: @wechat_menu, scope: :wechat_menu, url: admin_wechat_config_wechat_menus_path(@wechat_config) do |f| %>
      <%= f.hidden_field :type, value: 'ParentMenu' %>
      <%= f.text_field :name, required: true %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
